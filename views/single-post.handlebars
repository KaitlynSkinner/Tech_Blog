<article class="post">
  <div class="title">
    <h3>{{post.title}}</h3>
    <p>({{post.contents}})</p>
  </div>
  <div class="meta">
    {{post.user.username}}
    on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
<form class="form-group">
  <div>
    <textarea class="form-control" name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn btn-primary" type="submit">Add Comment</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}