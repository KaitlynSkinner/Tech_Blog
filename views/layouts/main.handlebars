<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <body>
    <div>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-primary">
          <h1 class="nav flex-column">
            <a class="nav-link" href="/">Tech Blog</a>
          </h1>
          {{#if loggedIn}}
          <form class="d-flex justify-content-end">
            <a class="nav-link" href="/dashboard">Dashboard</a>
            <button id="logout" class="btn-no-style">Logout</button>
          </form>
          {{else}}
          <form class="d-flex justify-content-end">
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/signup">Signup</a>
          </form>
          {{/if}}
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer class="footer-bg text-primary">
        &copy; Kaitlyn Skinner 2022
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>