<!-- Signup Form -->
<form class="signup-form p-3 col-lg-9 col-md-8 col-sm-7">
    <h4 class="text-primary">Signup Form</h4>
    <div class="form-group">
        <label class="form-text" for="username-signup">Username:</label>
        <input class="form-control" type="text" id="username-signup" />
    </div>
    <div class="form-group">
        <label class="form-text" for="email-signup">Email:</label>
        <input class="form-control" type="text" id="email-signup" />
    </div>
    <div class="form-group">
        <label class="form-text" for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
    </div>
    <div class="form-group">
        <button class="mt-3 btn btn-primary btn-sm" type="submit">Signup</button>
    </div>
</form>

<script src="/javascript/signup.js"></script>