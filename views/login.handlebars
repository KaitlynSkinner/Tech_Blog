<!-- Login Form -->
<form class="login-form p-3 mt-4 col-lg-9 col-md-8 col-sm-7">
    <h4 class="text-success">Login Form</h4>
    <div class="form-group">
        <label class="form-text" for="email-login">Email:</label>
        <input class="form-control" type="text" id="email-login" />
    </div>
    <div class="form-group">
        <label class="form-text" for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
    </div>
    <div class="form-group">
        <button class="mt-3 btn btn-success btn-sm" type="submit">Login</button>
    </div>
</form>

<script src="/javascript/login.js"></script>
